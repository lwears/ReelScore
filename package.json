{
  "name": "reelscore",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run build:api && pnpm run build:web",
    "build:api": "pnpm run --filter=@reelscore/api build",
    "build:web": "pnpm run --filter=web build",
    "typecheck": "pnpm run typecheck:api && pnpm run typecheck:web",
    "typecheck:api": "pnpm run --filter=@reelscore/api typecheck",
    "typecheck:web": "pnpm run --filter=web typecheck",
    "lint": "biome check . && eslint . --quiet",
    "lint:biome": "biome check .",
    "lint:eslint": "eslint .",
    "lint:fix": "biome check --write . && eslint . --fix",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "setup": "docker-compose -f apps/api/docker-compose.yml up -d",
    "setup-podman": "podman-compose -f apps/api/docker-compose.yml up -d"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.18.2"
  },
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^18.19.130",
    "add": "^2.0.6",
    "eslint": "^8.57.1",
    "eslint-plugin-unicorn": "^55.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "superjson": "2.2.1",
    "zod": "^4.1.12"
  },
  "packageManager": "pnpm@10.18.2+sha512.9fb969fa749b3ade6035e0f109f0b8a60b5d08a1a87fdf72e337da90dcc93336e2280ca4e44f2358a649b83c17959e9993e777c2080879f3801e6f0d999ad3dd"
}
